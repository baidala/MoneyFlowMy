<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:id="@+id/tlExpenses"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_column="2"
    android:alignmentMode="alignMargins"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">



    <TextView
        android:id="@+id/tvCashflowIncomesSumma"
        android:text="0"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        />

    <TextView
        android:id="@+id/tvCashflowIncomes"
        android:text="@string/title_tab_incomes"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@color/colorPrimary" />

    <Space
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_height="10dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>

    <view
        class="ua.itstep.android11.moneyflow.views.Graphics"
        android:id="@+id/vGraphics"
        android:text="test"
        android:layout_gravity="top"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowSpan="5"
        android:alignmentMode="alignMargins"
        />




    <TextView
        android:id="@+id/tvCashflowSumma"
        android:text="0"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0" />

    <TextView
        android:id="@+id/tvCashflowExpenses"
        android:text="@string/title_tab_expenses"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@color/colorAccent" />

    <Space
        android:layout_gravity="fill_horizontal"
        android:layout_height="10dp"
        android:layout_column="1"
        android:layout_row="2"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>



    <TextView
        android:id="@+id/tvCategories"
        android:text="@string/spents_by_categories"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3" />

    <Button
        android:id="@+id/btnCategory2"
        android:text="@string/title_tab_cash_flow"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4" />

    <Button
        android:id="@+id/btnCategory3"
        android:text="@string/title_tab_cash_flow"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5" />

    <Button
        android:id="@+id/btnCategory1"
        android:text="@string/title_tab_cash_flow"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
        />


</GridLayout>