<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/AppSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppSpinnerItem.DropDownItem</item>

    </style>



    <style name="AppSpinnerItem" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppSpinnerItem.DropDownItem" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:colorForeground">@android:color/background_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
